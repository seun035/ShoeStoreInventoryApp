<?xml version="1.0" encoding="utf-8"?>
<!--I used Constraint layout because this view could become complex-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="shoe"
            type="com.udacity.shoestore.models.Shoe" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shoe_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@{@string/shoe_item_name(shoe.name)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/shoe_item_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{@string/shoe_item_company(shoe.company)}"
                app:layout_constraintEnd_toEndOf="@+id/shoe_item_name"
                app:layout_constraintStart_toStartOf="@+id/shoe_item_name"
                app:layout_constraintTop_toBottomOf="@+id/shoe_item_name" />

            <TextView
                android:id="@+id/shoe_item_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{@string/shoe_item_size(Double.toString(shoe.size))}"
                app:layout_constraintEnd_toEndOf="@+id/shoe_item_company"
                app:layout_constraintStart_toStartOf="@+id/shoe_item_company"
                app:layout_constraintTop_toBottomOf="@+id/shoe_item_company" />

            <TextView
                android:id="@+id/shoe_item_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@{@string/shoe_item_description(shoe.description)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/shoe_item_size"
                app:layout_constraintStart_toStartOf="@+id/shoe_item_size"
                app:layout_constraintTop_toBottomOf="@+id/shoe_item_size" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
